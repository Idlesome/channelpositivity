{
  "name": "channelpositivity",
  "version": "0.5.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "start": "next dev",
    "build:full": "npm run gen && npm run build",
    "build": "next build && next export && next-image-export-optimizer",
    "build:serve:prod": "npm run build && npm run serve:prod",
    "serve:prod": "npx serve -l 3001 ./out",
    "lint": "next lint",
    "gen": "npm run gen:generate && npm run gen:format && npm run gen:validate",
    "gen:generate": "ts-node --project ./gen/tsconfig.json --files ./gen/gen.ts",
    "gen:format": "prettier ./data/articles/markdown/index.ts --write",
    "gen:validate": "tsc ./types.d.ts ./data/articles/markdown/index.ts --noEmit",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "release:major": "changelog -M && git add CHANGELOG.md && git commit -m 'updated CHANGELOG.md' && npm version major",
    "release:minor": "changelog -m && git add CHANGELOG.md && git commit -m 'updated CHANGELOG.md' && npm version minor",
    "release:patch": "changelog -p && git add CHANGELOG.md && git commit -m 'updated CHANGELOG.md' && npm version patch"
  },
  "dependencies": {
    "marked": "^4.0.18",
    "next": "^13.1.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@notionhq/client": "^2.2.14",
    "@tailwindcss/typography": "^0.5.9",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@types/marked": "^4.0.3",
    "@types/node": "18.0.6",
    "@types/react": "18.0.15",
    "@types/react-dom": "18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-istanbul": "^2.1.1",
    "@vitest/ui": "^2.1.1",
    "autoprefixer": "^10.4.13",
    "eslint": "^8.57.1",
    "eslint-config-next": "^13.1.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.36.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-testing-library": "^6.3.0",
    "eslint-plugin-vitest": "^0.5.4",
    "file-loader": "^6.2.0",
    "generate-changelog": "^1.8.0",
    "jsdom": "^25.0.1",
    "json5": "^2.2.3",
    "next-image-export-optimizer": "1.1.2",
    "notion-to-md": "^3.1.1",
    "postcss": "^8.4.21",
    "prettier": "^3.3.3",
    "raw-loader": "^4.0.2",
    "serve": "^14.2.3",
    "sharp": "0.31.1",
    "tailwindcss": "^3.2.4",
    "ts-node": "^10.9.2",
    "typescript": "4.7.4",
    "vitest": "^2.1.1"
  }
}
